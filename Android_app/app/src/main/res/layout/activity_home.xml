<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bof.gaze.activity.menu.HomeActivity"
    android:background="@color/home_bg"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/home_act_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/splachscreen"
        android:background="@color/transparent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homeTouchToPlayText"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/black"/>

    <FrameLayout
        android:id="@+id/homePermissionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/homePermissionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/homeCameraPermission"/>
        <Button
            android:id="@+id/homePermissionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

    </FrameLayout>

</LinearLayout>
