<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_rules_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bof.gaze.activity.menu.RulesMenuActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rules"/>

    <!-- Change activity buttons -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changeActivityLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="15dp"
            android:id="@+id/returnImgButton"
            app:srcCompat="@drawable/backred" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">

        <TextView
            android:id="@+id/RulesContent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingExtra="4sp"
            android:maxLines="30"
            android:padding="20dp"
            android:scrollbars="vertical"
            android:text="@string/rules_content"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
