<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ican.anamorphoses_jsdn.CameraActivity">

    <!-- ANAMORPHOSIS TARGET + SCORE -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:translationZ="2dp">

        <!-- TARGET ANAMORPHOSIS -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/target_anamorph_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="14dp"
                android:paddingTop="15dp"
                android:translationZ="2dp"
                app:srcCompat="@drawable/empty_anamorphosis" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/target_anamorph_bg"
                android:padding="10dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/anamorphose_hard" />

        </RelativeLayout>

        <!-- SCORE -->
        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="440dp"
            android:textColor="@color/white"
            android:text="Score : "
            android:textSize="22dp"/>

    </FrameLayout>

    <!-- CAMERA BUTTON -->
    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:translationZ="2dp">

        <ImageButton
            android:id="@+id/photo_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/photo_button"/>

    </FrameLayout>

    <!-- CANCEL BUTTON -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:translationZ="2dp"
        android:id="@+id/frameLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/cancel_anamorph_img"
            app:srcCompat="@drawable/abandon_button" />

    </FrameLayout>

    <!-- ZOOM ANAMORPHOSIS TARGET -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:translationZ="3dp">

        <ImageButton
            android:id="@+id/zoom_anamorph_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/zoom_anamorph_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"/>

    </FrameLayout>

    <!-- CAMERA TOOL -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#000">

</FrameLayout>

</RelativeLayout>
