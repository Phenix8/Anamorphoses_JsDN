<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ican.gaze.activity.game.CameraActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="2dp"
        android:background="@android:color/transparent"
        android:id="@+id/camera_background"
        app:srcCompat="@drawable/camera"/>


    <!-- ABANDON BUTTON + SCORE -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/frameLayout2"
        android:translationZ="2dp">

        <!-- ABANDON BUTTON -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:id="@+id/cancel_anamorph_img"
            app:srcCompat="@drawable/camera_cancel" />

        <!-- SCORE -->
        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="500dp"
            android:textColor="@color/white"
            android:text="Score : "
            android:textSize="22dp"/>

    </FrameLayout>

    <!-- CAMERA BUTTON -->
    <FrameLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="550dp"
        android:translationZ="2dp">

        <ImageButton
            android:id="@+id/photo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/camera_pictureicon"/>

    </FrameLayout>

    <!-- TARGET ANAMORPHOSE -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="5dp"
        android:translationZ="2dp"
        android:id="@+id/frameLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/target_anamorph_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:translationZ="2dp"
                app:srcCompat="@drawable/empty_anamorphosis" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:id="@+id/target_anamorph_bg"
                app:srcCompat="@drawable/camera_little_anamorph_bg" />

        </RelativeLayout>

    </FrameLayout>

    <!-- ZOOM ANAMORPHOSIS TARGET -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:translationZ="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/zoom_anamorph_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/camera_large_anamorhp_bg"/>

            <ImageView
                android:id="@+id/zoom_anamorph_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:padding="12dp"/>

        </RelativeLayout>
    </FrameLayout>

    <!-- CAMERA TOOL -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    </FrameLayout>

</RelativeLayout>