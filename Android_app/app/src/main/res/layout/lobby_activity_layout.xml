<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_host_menu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ican.gaze.activity.menu.LobbyActivity"
    android:weightSum="1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/room"/>

    <!-- ROOM TITLE (editable+ non-editable) -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:id="@+id/nonEditable_roomTitle"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:id="@+id/editable_roomTitle_bg"
            app:srcCompat="@drawable/room_roomnameempty"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:lines="1"
            android:ems="10"
            android:visibility="visible"
            android:id="@+id/editable_roomTitle_txt"/>

    </RelativeLayout>

    <!-- ROOM MEMBERS + TIPS -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:translationZ="2dp">

        <!-- ROOM MEMBERS -->

            <ListView
                android:id="@+id/playerList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.9" />

        <!-- TIPS -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:srcCompat="@drawable/room_tips"
                android:id="@+id/Img_tipsBackground"/>

            <!-- Contenu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationZ="3dp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tips"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:id="@+id/Txt_TipsTitle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="- Press your name to be ready\n\n- Take anamorphosis\n in the right sens"
                    android:textAlignment="center"
                    android:id="@+id/Txt_TipsContent" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


    <!-- Change activity buttons -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changeActivityLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="15dp"
            android:id="@+id/returnImgButton"
            app:srcCompat="@drawable/backred" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/startBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/startGameButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
