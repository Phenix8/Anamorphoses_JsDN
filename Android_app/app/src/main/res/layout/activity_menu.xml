<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bof.gaze.activity.menu.MenuActivity"
    android:background="@color/menu_bg"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

    <ImageButton
        android:id="@+id/menu_act_background_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mainmenu"
        android:background="@color/transparent"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center">

        <!-- CREATE_GAME & JOIN_GAME -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <ImageButton
                android:text="Create Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/createGameButton"
                app:srcCompat="@drawable/mainmenu_creategame"/>

            <ImageButton
                android:text="Join Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:id="@+id/joinGameButton"
                app:srcCompat="@drawable/mainmenu_joingame"/>

        </LinearLayout>

        <!-- RULES & CHANGE_NICKNAME -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:text="Rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/rulesButton"
                app:srcCompat="@drawable/mainmenu_rules"/>

            <ImageButton
                android:text="Profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="20dp"
                android:id="@+id/highscoresButton"
            app:srcCompat="@drawable/mainmenu_changenickname"/>

            </LinearLayout>

    </LinearLayout>

    <!-- DEBUG -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beauf Prod"
        android:id="@+id/Debug_game_button"/>

</LinearLayout>
