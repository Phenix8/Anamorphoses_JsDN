<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_player1_score"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <!-- Background image -->
    <ImageView
        android:id="@+id/camera_J_score_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_other_player_score"/>

    <!-- Found anam. images -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/camera_player_anam1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/camera_found_anam"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/camera_player_anam2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/camera_found_anam"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/camera_player_anam3_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/camera_found_anam"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/camera_player_anam4_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera_found_anam"
            android:visibility="invisible"/>
    </LinearLayout>

    <!-- Score texte -->
    <TextView
        android:id="@+id/camera_J_score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0"/>

</FrameLayout>