<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ican.gaze">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".application.GazeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.menu.HomeActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.menu.NicknameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.menu.MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.menu.LobbyActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.menu.RulesMenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.game.AnamorphosisChoiceActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.menu.JoinRoomActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.menu.LoadingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.game.LeaderboardActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.game.CameraActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>